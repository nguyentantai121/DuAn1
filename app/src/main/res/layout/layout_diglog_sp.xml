<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="#D8E79E"
    android:orientation="vertical">
<TextView
    android:id="@+id/name_DiglogCart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Trà Mãng Cầu"
    android:textSize="50dp"
    android:layout_gravity="center"
    />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_ban"
            android:layout_width="150dp"
            android:layout_height="64dp"
            android:background="@drawable/custom_edtdangnhap"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10dp"
            android:hint="Bàn "
            android:textColorHint="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_giamCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giảm" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_soLuongCart"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/custom_edtdangnhap"
                android:layout_margin="20dp"
                android:drawablePadding="10dp"
                android:hint="SỐ Lượng"
                android:textColorHint="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btn_tangCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tăng" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_addCart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Thêm Vào Giỏ Hàng" />


</LinearLayout>