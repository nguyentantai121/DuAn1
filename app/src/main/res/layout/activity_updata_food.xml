<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdataFood">

    <ImageView
        android:id="@+id/image_FoodUpload"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        app:srcCompat="@drawable/baseline_upload_file_24" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtFood_NameUpload"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/custom_edtdangnhap"
            android:drawableLeft="@drawable/user"
            android:layout_margin="20dp"
            android:drawablePadding="10dp"
            android:hint="Nhập Tên Sản Phẩm"
            android:textColorHint="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtFood_PriceUpload"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/custom_edtdangnhap"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10dp"
            android:hint="Nhập Giá Sản Phẩm"
            android:layout_margin="20dp"
            android:textColorHint="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdoANVAT_Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_weight="1"
            android:text="Ăn Vặt" />

        <RadioButton
            android:id="@+id/rdoNUOC_Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nước" />
    </RadioGroup>

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
       android:layout_gravity="center"
        android:text="Button" />

</LinearLayout>